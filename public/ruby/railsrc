require 'logger'

logger = Logger.new(STDOUT)

Rails.logger = logger
ActiveRecord::Base.logger = logger

def sql(query)
  ActiveRecord::Base.connection.select_all(query)
end

def arm
  ActiveRecord::Migration
end

def conn
  ActiveRecord::Base.connection
end

